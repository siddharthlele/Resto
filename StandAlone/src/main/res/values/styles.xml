<resources>
    <style name="Resto" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/appBG</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- CARDVIEW STYLE -->
        <item name="cardStyle">@style/RestoCards</item>

        <!-- SOME TEXT COLORS -->
        <item name="android:textColorLink">@android:color/holo_blue_dark</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>

        <!-- CALLIGRAPHY ATTRIBUTE -->
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FloatingTextInput" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/sideBarTextColor</item>
    </style>

    <!-- CARD VIEW STYLE -->
    <attr name="cardStyle" format="reference" />
    <style name="RestoCards" parent="CardView">
        <item name="cardBackgroundColor">@color/cardBG</item>
    </style>
</resources>