<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/wel_cur_item_cont_pad">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtCurrencyName"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="@dimen/wel_cur_item_margin_pad"
            android:layout_marginLeft="@dimen/wel_cur_item_margin_pad"
            android:layout_marginRight="@dimen/wel_cur_item_margin_pad"
            android:layout_weight="1"
            android:gravity="left|center"
            android:padding="@dimen/wel_cur_item_margin_pad"
            android:text="INDIAN RUPEE"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="@dimen/wel_cur_item_name_size" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtCurrencySymbol"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="@dimen/wel_cur_item_margin_pad"
            android:layout_marginRight="@dimen/wel_cur_item_margin_pad"
            android:layout_marginTop="@dimen/wel_cur_item_margin_pad"
            android:layout_weight="1"
            android:gravity="left|center"
            android:padding="@dimen/wel_cur_item_margin_pad"
            android:text="INR"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="@dimen/wel_cur_item_symbol_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/wel_cur_item_cont_pad">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtCurrencyCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wel_cur_item_margin_pad"
            android:gravity="center"
            android:padding="@dimen/wel_cur_item_margin_pad"
            android:text="@string/india_rupee"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="@dimen/wel_cur_item_code_size" />
    </LinearLayout>

</LinearLayout>