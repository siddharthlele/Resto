<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/cardBG"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/linlaTableNumberContainer"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/wel_tbl_no_cont_margin"
                android:layout_marginRight="@dimen/wel_tbl_no_cont_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtTableNumberLabel"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:gravity="top|center"
                    android:text="TABLE NUMBER"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtTableNumber"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="11"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlaTableSeatsContainer"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/wel_tbl_no_cont_margin"
                android:layout_marginRight="@dimen/wel_tbl_no_cont_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtTableSeatsLabel"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:gravity="top|center"
                    android:text="SEATS / COVERS"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtTableSeats"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="6"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlaOccupationStatus"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/wel_tbl_no_cont_margin"
                android:layout_marginRight="@dimen/wel_tbl_no_cont_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtOccupationStatusLabel"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:gravity="top|center"
                    android:text="STATUS"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imgvwOccupationStatus"
                        fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_signal_green" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgvwMenuOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_more_vert_white_24dp" />
    </FrameLayout>
</android.support.v7.widget.CardView>