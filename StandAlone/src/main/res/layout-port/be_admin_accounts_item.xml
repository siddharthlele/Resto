<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/admin_acc_main_cont_margin"
    android:padding="@dimen/admin_acc_main_cont_pad">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/admin_acc_card_margin"
        card_view:cardBackgroundColor="@color/cardBG"
        card_view:cardElevation="@dimen/admin_acc_card_elevation">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/admin_acc_frame_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/admin_acc_frame_margin"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvwProfilePicture"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/superadmin" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvwMenuOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginRight="@dimen/admin_acc_popup_margin"
                android:layout_marginTop="@dimen/admin_acc_popup_margin"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_more_vert_white_24dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtUserName"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom|center"
                    android:background="#CCDCDCDC"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:paddingBottom="@dimen/admin_acc_text_padding"
                    android:paddingTop="@dimen/admin_acc_text_padding"
                    android:singleLine="true"
                    android:text="User Name"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/admin_acc_text_size"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>